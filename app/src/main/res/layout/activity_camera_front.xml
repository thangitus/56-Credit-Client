<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CameraFrontActivity">

    <io.fotoapparat.facedetector.view.CameraOverlayLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <io.fotoapparat.view.CameraView
            android:id="@+id/camera_front"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <io.fotoapparat.facedetector.view.RectanglesView
            android:id="@+id/rectanglesView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rectanglesColor="@color/colorAccent"
            app:rectanglesStrokeWidth="2dp" />
    </io.fotoapparat.facedetector.view.CameraOverlayLayout>

    <View
        android:id="@+id/viewTopFront"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorWhiteTransparency"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewBottomFront"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorWhiteTransparency"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/viewLeftFront"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorWhiteTransparency"
        app:layout_constraintBottom_toTopOf="@id/viewBottomFront"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewTopFront"
        app:layout_constraintWidth_percent="0.06" />

    <View
        android:id="@+id/viewRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorWhiteTransparency"
        app:layout_constraintBottom_toTopOf="@id/viewBottomFront"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewTopFront"
        app:layout_constraintWidth_percent="0.06" />

    <ImageView
        android:id="@+id/buttonCloseFront"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@id/viewTopFront"
        app:layout_constraintEnd_toEndOf="@id/viewTopFront"
        app:layout_constraintTop_toTopOf="@id/viewTopFront" />


    <ImageButton
        android:id="@+id/buttonTakePicFront"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#0000"
        android:rotation="270"
        android:src="@drawable/ic_take_camera"
        app:layout_constraintBottom_toBottomOf="@id/viewBottomFront"
        app:layout_constraintEnd_toEndOf="@id/viewBottomFront"
        app:layout_constraintStart_toStartOf="@id/viewBottomFront"
        app:layout_constraintTop_toTopOf="@id/viewBottomFront" />

</androidx.constraintlayout.widget.ConstraintLayout>